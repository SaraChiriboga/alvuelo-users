<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlVueloUsers.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*">

        <!-- Header con forma curva roja -->
        <Grid Grid.Row="0" HeightRequest="280">
            <!-- Fondo rojo con curva -->
            <Border BackgroundColor="{StaticResource AlVueloRed}"
                    VerticalOptions="Start"
                    HeightRequest="200">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0,0,500,500"/>
                </Border.StrokeShape>
                <Image Source="splash.png"
                       WidthRequest="500"/>
            </Border>
        </Grid>

        <!-- Contenido principal -->
        <ScrollView Grid.Row="1" Margin="0,-40,0,0">
            <VerticalStackLayout Padding="40,0" Spacing="25">

                <!-- Título de bienvenida -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="¡Bienvenido a AlVuelo!"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="{StaticResource AlVueloDarkRed}"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="Inicia sesión para continuar"
                           FontSize="15"
                           TextColor="{StaticResource TextSecondary}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <!-- Campo Email -->
                <VerticalStackLayout Spacing="8">
                    <Border Stroke="{StaticResource SeparatorGray}" 
                            StrokeThickness="1.5" 
                            BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="50,*" Padding="5,0,15,0">
                            <Label FontFamily="FASolid" 
                                    Text="&#xf0e0;" 
                                    TextColor="#1a1a1a"
                                    FontSize="16"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>

                            <Entry Grid.Column="1"
                                   x:Name="txtCorreo"
                                   Placeholder="Correo electrónico"
                                   PlaceholderColor="{StaticResource TextSecondary}"
                                   TextColor="{StaticResource AlVueloBlack}"
                                   Keyboard="Email"
                                   HeightRequest="50"
                                   VerticalOptions="Center"
                                   BackgroundColor="Transparent"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Campo Contraseña -->
                <VerticalStackLayout Spacing="8">
                    <Border Stroke="{StaticResource SeparatorGray}" 
                            StrokeThickness="1.5" 
                            BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="50,*,40" Padding="5,0,10,0">
                            <Label FontFamily="FASolid" 
                                    Text="&#xf084;" 
                                    TextColor="#1a1a1a"
                                    FontSize="16"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>      

                            <Entry Grid.Column="1"
                                   x:Name="txtPassword"
                                   IsPassword="True"
                                   Placeholder="Contraseña"
                                   PlaceholderColor="{StaticResource TextSecondary}"
                                   TextColor="{StaticResource AlVueloBlack}"
                                   HeightRequest="50"
                                   VerticalOptions="Center"
                                   BackgroundColor="Transparent"/>

                            <ImageButton Grid.Column="2"
                                         x:Name="btnTogglePassword"
                                         Source="eye_icon.png"
                                         WidthRequest="24"
                                         HeightRequest="24"
                                         Clicked="OnTogglePasswordClicked"
                                         BackgroundColor="Transparent"
                                         VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Botón Login -->
                <Button x:Name="btnLogin"
                        Text="Iniciar Sesión"
                        Clicked="OnLoginClicked"
                        BackgroundColor="{StaticResource AlVueloDarkRed}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="55"
                        FontAttributes="Bold"
                        FontSize="16"
                        Margin="0,5,0,0">
                    <Button.Shadow>
                        <Shadow Brush="Black" 
                                Offset="0,4" 
                                Radius="15" 
                                Opacity="0.3"/>
                    </Button.Shadow>
                </Button>

                <!-- Divisor -->
                <Grid ColumnDefinitions="*,Auto,*" 
                      ColumnSpacing="15"
                      Margin="0,10,0,10">
                    <BoxView Grid.Column="0"
                             HeightRequest="1"
                             BackgroundColor="{StaticResource SeparatorGray}"
                             VerticalOptions="Center"/>

                    <Label Grid.Column="1"
                           Text="O"
                           TextColor="{StaticResource TextSecondary}"
                           FontSize="14"/>

                    <BoxView Grid.Column="2"
                             HeightRequest="1"
                             BackgroundColor="{StaticResource SeparatorGray}"
                             VerticalOptions="Center"/>
                </Grid>

                <!-- Botones sociales -->
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Border WidthRequest="55"
                            HeightRequest="55"
                            BackgroundColor="White"
                            Stroke="{StaticResource SeparatorGray}"
                            StrokeThickness="1.5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Image Source="google.png"
                                WidthRequest="25"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGoogleLoginTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <Border WidthRequest="55"
                            HeightRequest="55"
                            BackgroundColor="White"
                            Stroke="{StaticResource SeparatorGray}"
                            StrokeThickness="1.5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Image Source="apple.png"
                                WidthRequest="25"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFacebookLoginTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <Border WidthRequest="55"
                            HeightRequest="55"
                            BackgroundColor="White"
                            Stroke="{StaticResource SeparatorGray}"
                            StrokeThickness="1.5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Image Source="phone.png"
                                WidthRequest="30"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAppleLoginTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </HorizontalStackLayout>

                <!-- Olvidaste contraseña -->
                <Label Text="¿Olvidaste tu contraseña?"
                       TextColor="{StaticResource AlVueloRed}"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,8,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnForgotPasswordTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <!-- Registrarse -->
                <HorizontalStackLayout Spacing="5" 
                                       HorizontalOptions="Center"
                                       Margin="0,10,0,30">
                    <Label Text="¿No tienes cuenta?"
                           TextColor="{StaticResource TextSecondary}"
                           FontSize="14"/>
                    <Label Text="Regístrate"
                           TextColor="{StaticResource AlVueloRed}"
                           FontSize="14"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegisterClicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>